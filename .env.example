# AI广告代投系统 - 环境变量配置示例
# 复制此文件为 .env 并填写实际值

# 应用配置
APP_NAME=AI广告代投系统
DEBUG=false
ENV_NAME=development

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/ai_ad_spend
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# JWT认证配置
JWT_SECRET=your-super-secret-jwt-key-at-least-64-characters-long-for-security
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 数据加密配置
ENCRYPTION_KEY=your-32-character-encryption-key-for-data-security

# Supabase配置 (如果使用Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Redis缓存配置
REDIS_URL=redis://localhost:6379/0

# CORS配置 (前端应用地址)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API配置
API_RATE_LIMIT=100
API_RATE_WINDOW=60
MAX_FILE_SIZE=10485760

# 日志配置
LOG_LEVEL=INFO

# 监控配置 (可选)
SENTRY_DSN=your-sentry-dsn-for-error-monitoring

# 外部服务配置 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
